{
  "name": "motivation-streak",
  "version": "1.0.0",
  "description": "Daily translation practice application with streak motivation system",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "server:install": "cd server && npm install",
    "client:install": "cd client && npm install",
    "install-all": "npm install && npm run server:install && npm run client:install",
    "build": "cd client && npm run build",
    "init-db": "cd server && npm run init-db",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "translation",
    "language-learning",
    "streak",
    "motivation",
    "react",
    "express",
    "mysql"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 